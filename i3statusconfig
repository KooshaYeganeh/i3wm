# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!


general {
        output_format = "i3bar"
        colors = false
        markup = pango
        interval = 1
  	color_good = "#a3be8c"
  	color_degraded = "#ebcb8b"
  	color_bad = "#bf616a"
}

order += "cpu_temperature 0"
order += "load"
order += "disk /"
order += "wireless wlan0"
order += "volume master"
order += "battery 0"
order += "tztime local"



tztime local {

        format = "⏱️ %Y-%m-%d %H:%M:%S "
}


battery 0 {

        format = "%status %percentage %remaining %emptytime"
        format_down = "<span background='#ff5555' color='#000000'> 🔌 No battery</span>"
        status_chr = "⚡ CHR"
        status_bat = "🔋 BAT"
        status_unk = "? UNK"
        status_full = "☻ FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}




volume master {
        format = "<span background='#2F4F4F'> 🔊  %volume </span>"
        format_muted = "<span background='#212D31'> 🔇 Muted </span>"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

wireless wlan0 {
        format_up = "<span background=''#212D31' >📶  %essid </span>"
        format_down = "<span background=''#212D31' > 📶 Disconnected </span>"
}


disk "/" {
        format = "<span background='#64a3a3'> 💾 %free Free </span>"
}


load {
        format = "🔲 %5min Load "
}



cpu_temperature 0 {
        format = "<span background='#ff5555' color='#000000'> 🌡 %degrees °C </span>"
        path = "/sys/class/thermal/thermal_zone0/temp"
}
